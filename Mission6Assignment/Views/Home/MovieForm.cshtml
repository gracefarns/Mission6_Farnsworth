@model Form

<h1>Submit a movie</h1>

<h1>Dating Application</h1>

<form method="post">
    <input type="hidden" asp-for="MovieId" />
    <br />
    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId">
        <option value="Select a Category">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required />
    <br />
    <label asp-for="Director">Director's Name:</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited" >
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent to:</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">CopiedToPlex:</label>
    <select asp-for="CopiedToPlex" required />
        <option value="True">Yes</option>
        <option value="False">No</option>
	</select>
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" size="4"/>
    <br />
    
    <br />
    
    <button type="submit">Submit Application</button>


    <div asp-validation-summary="All"></div>
</form>